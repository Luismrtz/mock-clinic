{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["cypress"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "." 
  },
  "include": [
    "src",          
    "cypress",          
    "**/*.ts",
  ],
  "exclude": ["node_modules"]
}